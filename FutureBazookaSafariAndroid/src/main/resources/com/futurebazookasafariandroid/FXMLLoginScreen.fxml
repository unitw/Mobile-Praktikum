<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<AnchorPane id="AnchorPane" prefHeight="512" prefWidth="288" styleClass="loginScreen" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.futurebazookasafariandroid.FXMLLoginScreenController">
    <stylesheets>
        <URL value="@fxmlloginscreen.css"/>
    </stylesheets>
    <children>
        <Label 
            text="Future Bazooka Safari"
            prefHeight="20"
            prefWidth="288"
            styleClass="logoLabel"
            layoutY="75" 
        />
        <TextField 
            prefHeight="27"
            prefWidth="150"
            layoutX="75"
            layoutY="190"
            promptText="Username"
        />
        <PasswordField 
            prefHeight="27"
            prefWidth="150"
            layoutX="75"
            layoutY="225"
            promptText="Password" 
        />
        <CheckBox 
            layoutX="75"
            layoutY="260"
            text="automatischer Login"
            styleClass="loginScreenCheckBox"
        />

        <Button 
            text="Log In"
            prefHeight="30"
            prefWidth="150"
            styleClass="loginScreenButton"
            layoutX="75" 
            layoutY="290" 
            onAction="#LoginPressed" 
        />
        <Button 
            text="Sign Up"
            prefHeight="30"
            prefWidth="150"
            styleClass="loginScreenButton"
            layoutX="75" 
            layoutY="340" 
            onAction="#SignUpPressed" 
        />
    </children>
</AnchorPane>
