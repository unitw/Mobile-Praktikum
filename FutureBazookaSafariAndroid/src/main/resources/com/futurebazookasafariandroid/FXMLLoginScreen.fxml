<GridPane alignment="center" prefHeight="324.0" prefWidth="299.0" styleClass="loginScreen" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.futurebazookasafariandroid.FXMLLoginScreenController">
   <children>
       <AnchorPane id="AnchorPane" GridPane.vgrow="ALWAYS">
       <stylesheets>
           <URL value="@fxmlloginscreen.css" />
       </stylesheets>
       <children>
           <Label prefHeight="20" prefWidth="288" styleClass="logoLabel" text="Future Bazooka Safari" AnchorPane.topAnchor="0.0" />
       </children>
   </AnchorPane>
     <TextField fx:id="fbs_username" prefHeight="27" prefWidth="150" promptText="Username" GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
         <GridPane.margin>
            <Insets left="40.0" right="40.0" />
         </GridPane.margin>
      </TextField>
     <PasswordField fx:id="fbs_passwort" prefHeight="27" prefWidth="150.0" promptText="Password" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
         <GridPane.margin>
            <Insets left="40.0" right="40.0" />
         </GridPane.margin>
      </PasswordField>

        <Button onAction="#LoginPressed" prefHeight="30" prefWidth="150" styleClass="loginScreenButton" text="Log In" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.vgrow="NEVER">
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </Button>
     <Button onAction="#SignUpPressed" prefHeight="30" prefWidth="150" styleClass="loginScreenButton" text="Sign Up" GridPane.halignment="CENTER" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="30.0" right="30.0" />
         </GridPane.margin>
      </Button>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="40.0" prefHeight="50.0" valignment="CENTER" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
   </rowConstraints>
</GridPane>
